<%= simple_form_for(@office, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      
  <%= f.input :name, label: "Nombre", required: true %>
  <%= f.input :street, label: "Calle", required: true %>
  <%= f.input :ext_number, label: "Número exterior", required: true %>
  <%= f.input :int_number, label: "Número interior" %>
  <%= f.input :neighborhood, label: "Colonia", required: true %>
  <%= f.input :postal_code, label: "Código postal", required: true %>
  <%= f.input :city, label: "Ciudad", required: true %>
  <%= f.input :country, label: "País", required:true %>
       
  <div class="d-grid gap-2">
      <%= f.button :submit, "Aceptar", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
