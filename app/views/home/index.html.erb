<div class="row justify-content-md-center">
    <div class="col-md-9">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
          <h2><i class="fab fa-bity"></i> Bitty</h2>
          <p>Tu administrador de confianza</p>
          <%= link_to 'Registrarse', new_user_registration_path, class: "btn btn-outline-light btn-lg" %>
        </div>
    </div>
</div>

<div class="row justify-content-md-center">
	 <div class="col-md-2">
	 	<div class="d-grid gap-2">
  			<%= link_to 'Registar sucursal', new_office_path, class: "btn btn-primary" %>
			<%= link_to 'Registar empleado', new_employee_path, class: "btn btn-primary" %>
		</div>
	 </div>

	 <div class="col-md-6">
	 	<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th>Sucursal</th>
					<th>No. de Empleados</th>
					<th>Opciones</th>
				</tr>
			</thead>
			<tbody>	
				<% @data.each do |data| %>
				<tr>
					<td><%= data.name_office %></td>
					<td><%= data.count_employees %></td>
					<td><%= link_to '<i class="far fa-eye"></i>'.html_safe, '#' %>
						<%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_office_path(data.id_offices) %></td>
				</tr>	
				<% end %>
			</tbody>
		</table>
	 </div>
</div>



